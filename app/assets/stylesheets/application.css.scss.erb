@import url('http://fonts.googleapis.com/css?family=Audiowide');

body {
   background-color: black;
   text-align: center;
   font-family: 'Audiowave';
}

#main {
   background-color: black;
}

canvas, div#scores, div#controls {
   background-image: url('<%= asset_path("spacecat.gif") %>');
   background-size: 100% 100%;
   z-index: 1;
}

#main, canvas {
   position: absolute;
   height: 700px;
   width: 1000px;
   top: 50%;
   left: 50%;
   margin: -350px 0 0 -500px;
   border: solid white 1px;
   text-align: center;
}

p, h1, h2, h3, h3#overlay-text, h4 {
   position: absolute;
   text-align: center;
   width: 100%;
   font-family: 'Audiowide';
   margin: 0;
   padding: 0;
}

p {
   font-size: 16px;
   top: 60%;
}

h1 {
   font-size: 120px;
   top: 25%;
}

h2 {
   font-size: 50px;
   top: 5%;
}

h3, h3#overlay-text {
   font-size: 75px;
   top: 40%;
}

h4 {
   font-size: 24px;
   top: 60%;
   font-family: 'Audiowide';
}

form {
   position: absolute;
   top: 70%;
   width: 100%;
}
#namebox {
   font-family: 'Audiowide';
   line-height: 24px;
   background-color: black;
   color: white;
   font-size: 16px;
}

::-webkit-input-placeholder,
:-moz-placeholder,
::-moz-placeholder,
:-ms-input-placeholder {
   font-family: 'Audiowide';
   font-size: 24px;
}

table {
   position: absolute;
   left: 20%;
   top: 20%;
   margin: auto auto;
   width: 60%;
   line-height: 32px;
   font-family: 'Audiowide';
   color: #0062B3;

   td {
      width: 50%;
   }
}

ul {
   position: absolute;
   width: 100%;
   top: 90%;
   padding: 0;
   margin: 0;
   text-align: center;
   font-family: 'Audiowide';
   list-style-type: none;

   li {
      cursor: pointer;
      display: inline-block;
      padding: 0 20px 0 20px;
      text-decoration: none;
      color: #4775FF;
      &:hover {
         // padding: 0 30px 0 28px;
         // font-size: 18px;
         color: #d20000;
      }
   }
}

audio {
   display: none;
}

div#overlay {
   position: absolute;
   height: 100%;
   width: 100%;
   text-align: center;
   z-index: 2;
}



.gallery-piece {
   z-index: -1;
   position: fixed;
   top: 50%;
   left: 50%;
   max-width: 200px;
   max-height: 120px;
   -webkit-box-shadow: 0px 0px 71px -2px rgba(255,200,36,0.54);
   -moz-box-shadow: 0px 0px 71px -2px rgba(255,200,36,0.54);
   box-shadow: 0px 0px 71px -2px rgba(255,200,36,0.54);
   -ms-transform: rotate(360deg); /* IE 9 */
   -webkit-transform: rotate(360deg); /* Chrome, Safari, Opera */
   transform: rotate(360deg);
   /*	transition: 1s;*/
}
